{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Application",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "dev"
        ],
        "port": 9229,
        "internalConsoleOptions": "openOnSessionStart"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Tests",
        "program": "${workspaceFolder}/ace.js",
        "args": [
          "test"
        ],
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }